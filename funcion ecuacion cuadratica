#include "stdafx.h"
#include <iostream>
#include "conio.h"
#include "math.h"

using namespace std;

float determinante(float a, float b, float c, float &x1, float &x2);
void reales(float a, float b, float d, float &x1, float &x2);
void imaginarias(float a, float b, float d, float &x1, float &x2);
float unica(float a, float b);

void main()
{
	float a,b,c,d,x, x1, x2;
	cout<<"Ingrese A";
	cin>>a;
	cout<<"Ingrese B";
	cin>>b;
	cout<<"Ingrese C";
	cin>>c;
	d=determinante(a,b,d,x1,x2);
	if(d>0)
	{
		reales(a,b,d,x1,x2);
		cout<<"Solucion1: "<<x1;
		cout<<"\nSolucion2: "<<x2;
	}
	else
		if(d==0)
		{
			x=unica(a,b);
			cout<<"Solucion Unica:"<<x;
		}
		else
		{
			imaginarias(a,b,d,x1,x2);
		cout<<"Solucion 1:"<<x1<<"+"<<x2<<"i";
		cout<<"\nSolucion 2:"<<x1<<"-"<<x2<<"i";
		}
getch();
}


float determinante(float a, float b, float c, float &x1, float &x2)
{
	float aux;
	aux=pow(b,2)-(4*a*c);
	return aux;
}

void reales(float a, float b, float d, float &x1, float &x2)
{
	x1=(-b+sqrt(d))/(2*a);
	x2=(-b-sqrt(d))/(2*a);
}

void imaginarias(float a,float b,float d, float &x1, float &x2)
{
	x1=-b/(2*a);
	x2=sqrt(-d)/(2*a);
}

float unica(float a, float b)
{ 
	float x;
	x=-b/(2*a);
	return x;
}
